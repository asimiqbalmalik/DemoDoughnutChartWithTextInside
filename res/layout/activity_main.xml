<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.asim.demodoughnutchartwithtext.MainActivity" >

    <TextView
        android:id="@+id/txtDoughnut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Doughnut Chart"
        android:textColor="#ffffff"
        android:textSize="30dp" />

    <CheckBox
        android:id="@+id/chkplayDoughnut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDoughnut"
        android:layout_centerHorizontal="true"
        android:text="Play Doughnut"
        android:textColor="#ffffff" />

    <RelativeLayout
        android:id="@+id/doughnutchartmain"
        android:layout_width="250dp"
        android:layout_height="250dp"
    
        android:layout_below="@+id/chkplayDoughnut" >

        <LinearLayout
            android:id="@+id/doughnutchart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <TextView
            android:id="@+id/tvdonutcenterlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="0%"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <SeekBar
        android:id="@+id/control_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doughnutchartmain"
        android:layout_margin="10dp"
        android:max="100"
        android:progress="0" />

</RelativeLayout>